{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/styles/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/js/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
